{{template "base" .}}

{{define "title"}}{{.PostEx.Title}}{{end}}


{{define "headline"}}
  {{with .PostEx}}
    <div class="header show-header">
      <div class="title">{{.Title}}</div>
      <p class="body date">{{humanDate .Modified}}</p>
    </div>
    <div class="line">
      <hr>
    </div>
    <p class="body author">by {{.Author}}</p>
  {{end}}
{{end}} 
{{define "main"}}
  {{.PostEx.Content}}
{{end}}